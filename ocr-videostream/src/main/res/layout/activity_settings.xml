<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMAGE SIZE" />

    <Spinner
        android:id="@+id/spinnerIMAGESIZE"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:entries="@array/image_size_items"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCENE" />

    <Spinner
        android:id="@+id/spinnerSCENE"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:entries="@array/scene_items"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ZOOM" />
    <Spinner
        android:id="@+id/spinnerZOOM"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:entries="@array/zoom_items"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:onClick="onClickbtn_SUBMIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE AND CLOSE"
        android:layout_gravity="center" />

</LinearLayout>